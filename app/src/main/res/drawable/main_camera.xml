<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval"
            android:useLevel="false" >

            <solid android:color="@color/color_ff4c51" />

            <padding
                android:left="2dp"
                android:top="1dp"
                android:right="2dp"
                android:bottom="1dp" />

            <solid
                android:color="@color/color_ff4c51" />

            <size android:width="48dp"
                android:height="48dp" />

        </shape>
    </item>

    <item>
        <bitmap android:src="@mipmap/main_camera"
            android:gravity="center" />
    </item>
</layer-list>
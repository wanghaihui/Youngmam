<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foreground="@color/foreground_shade">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <com.xiaobukuaipao.youngmam.view.TopicImageView
            android:id="@+id/image_gift"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <com.xiaobukuaipao.youngmam.font.FontTextView android:id="@+id/gift_credit_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="@string/str_credit"
                android:textSize="@dimen/text_size_12sp"
                android:textColor="@color/color_b2b2b2"
                app:font="fzltxihk"/>

            <com.xiaobukuaipao.youngmam.font.FontTextView android:id="@+id/gift_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/gift_credit_tip"
                android:layout_marginRight="2dp"
                android:layout_centerVertical="true"
                android:textSize="@dimen/text_size_16sp"
                android:textColor="@color/color_ff4c51"
                app:font="fzltxihk"/>

            <com.xiaobukuaipao.youngmam.font.FontTextView android:id="@+id/gift_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/gift_price"
                android:layout_marginRight="20dp"
                android:layout_centerVertical="true"
                android:textSize="@dimen/text_size_14sp"
                android:textColor="@color/color_505050"
                app:font="fzltxihk"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp">

            <com.xiaobukuaipao.youngmam.font.FontTextView android:id="@+id/gift_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:textSize="@dimen/text_size_14sp"
                app:font="fzltxihk"/>

            <com.xiaobukuaipao.youngmam.font.FontTextView android:id="@+id/gift_privilege"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawableLeft="@mipmap/gift_privilege_tip"
                android:drawablePadding="5dp"
                android:textSize="@dimen/text_size_12sp"
                android:textColor="@color/color_b2b2b2"
                app:font="fzltxihk"/>

        </RelativeLayout>

    </LinearLayout>

    <ImageView android:id="@+id/cover_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</FrameLayout>
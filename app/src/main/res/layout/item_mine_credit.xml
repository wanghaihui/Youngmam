<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:background="@color/label_item_bg">

    <com.xiaobukuaipao.youngmam.font.FontTextView android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_505050"
        android:textSize="@dimen/text_size_14sp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        app:font="fzltxihk"/>

    <com.xiaobukuaipao.youngmam.font.FontTextView android:id="@+id/credit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/title"
        android:layout_marginLeft="15dp"
        android:drawableLeft="@mipmap/mini_credit"
        android:drawablePadding="5dp"
        android:layout_centerVertical="true"
        android:textSize="@dimen/text_size_14sp"
        android:textColor="@color/color_ff4c51"
        app:font="fzltxihk" />

    <ImageView android:id="@+id/more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/btn_setting_more" />

    <com.xiaobukuaipao.youngmam.font.FontTextView android:id="@+id/count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_505050"
        android:textSize="@dimen/text_size_14sp"
        android:layout_toLeftOf="@+id/more"
        android:layout_marginRight="15dp"
        android:layout_centerVertical="true"
        android:visibility="gone"
        app:font="fzltxihk" />

</RelativeLayout>
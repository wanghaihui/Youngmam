<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_basic_bg">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:foreground="@color/foreground_shade">

        <com.xiaobukuaipao.youngmam.view.TopicImageView
            android:id="@+id/image_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop" />
        
        <com.xiaobukuaipao.youngmam.widget.SquareLayout2
            android:id="@+id/square_layout"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:layout_gravity="top|right"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/rectangle_4cback_bg"
            android:orientation="vertical">

            <ImageView android:id="@+id/theme_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/theme_like_normal"/>

            <com.xiaobukuaipao.youngmam.font.FontTextView
                android:id="@+id/theme_like_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="3dp"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_12sp"
                app:font="fzltxihk"/>

        </com.xiaobukuaipao.youngmam.widget.SquareLayout2>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <com.xiaobukuaipao.youngmam.font.FontTextView
            android:id="@+id/category_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="2dp"
            android:textSize="@dimen/text_size_14sp"
            android:background="@drawable/dynamic_linear_bg"
            app:font="fzltxihk"/>

        <com.xiaobukuaipao.youngmam.font.FontTextView
            android:id="@+id/desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/text_size_16sp"
            android:textColor="@color/color_505050"
            android:singleLine="true"
            android:ellipsize="end"
            app:font="fzltxihk"/>

    </LinearLayout>

</LinearLayout>
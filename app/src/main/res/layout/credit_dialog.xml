<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="90dp"
    android:layout_height="90dp"
    android:gravity="center"
    android:padding="20dp"
    android:background="@drawable/credit_dialog_bg">

    <ImageView android:id="@+id/credit_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/dialog_credit"/>

    <com.xiaobukuaipao.youngmam.font.FontTextView
        android:id="@+id/credit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/color_ffd801"
        app:font="fzltxihk"/>
</LinearLayout>
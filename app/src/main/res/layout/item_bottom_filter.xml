<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_vertical"
    android:background="@color/black">

    <LinearLayout
        android:id="@+id/small_filter_container"
        android:layout_width="93dp"
        android:layout_height="93dp"
        android:gravity="center">

        <com.xiaobukuaipao.youngmam.gpuimage.GPUImageView
            android:id="@+id/small_filter"
            android:layout_width="90dp"
            android:layout_height="90dp" />

    </LinearLayout>

    <com.xiaobukuaipao.youngmam.font.FontTextView
        android:id="@+id/filter_name"
        android:layout_width="93dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/small_filter_container"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textColor="@color/white"
        app:font="fzltxihk"/>

</RelativeLayout>
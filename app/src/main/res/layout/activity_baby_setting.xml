<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.xiaobukuaipao.youngmam.widget.YoungActionBar
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_height"
        android:background="@color/color_action_bar">
    </com.xiaobukuaipao.youngmam.widget.YoungActionBar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rectangle_white_bg">

        <RelativeLayout android:id="@+id/avatar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@color/label_item_bg">

            <com.xiaobukuaipao.youngmam.font.FontTextView android:id="@+id/txt_avatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_505050"
                android:textSize="@dimen/text_size_14sp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                app:font="fzltxihk"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true">

                <ImageView android:id="@+id/avatar"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_toLeftOf="@+id/more_avatar"/>

                <ImageView android:id="@+id/more_avatar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/btn_setting_more"/>

            </LinearLayout>


        </RelativeLayout>

        <View android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_e8e8e8"/>


        <RelativeLayout android:id="@+id/name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:background="@color/label_item_bg">

            <com.xiaobukuaipao.youngmam.font.FontTextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_505050"
                android:textSize="@dimen/text_size_14sp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/str_nickname"
                app:font="fzltxihk"/>

            <com.xiaobukuaipao.youngmam.font.FontTextView android:id="@+id/txt_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                app:font="fzltxihk"/>

        </RelativeLayout>

        <View android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_e8e8e8"/>

        <RelativeLayout android:id="@+id/state_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:background="@color/label_item_bg">

            <com.xiaobukuaipao.youngmam.font.FontTextView android:id="@+id/txt_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_505050"
                android:textSize="@dimen/text_size_14sp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/str_state"
                app:font="fzltxihk"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true">

                <com.xiaobukuaipao.youngmam.font.FontTextView android:id="@+id/state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    app:font="fzltxihk"/>

                <ImageView android:id="@+id/more_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/btn_setting_more"/>

            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>

</LinearLayout>